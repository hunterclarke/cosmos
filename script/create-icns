#!/usr/bin/env bash
set -euo pipefail

# Create macOS .icns file from a source image
# Usage: ./script/create-icns <source-image> [output-path]
#
# Example:
#   ./script/create-icns icon.png crates/apps/orion/assets/icon.icns

if [[ $# -lt 1 ]]; then
    echo "Usage: $0 <source-image> [output-path]"
    echo ""
    echo "Creates a macOS .icns file from a source image (PNG recommended, 1024x1024 or larger)"
    echo ""
    echo "Example:"
    echo "  $0 my-icon.png crates/apps/orion/assets/icon.icns"
    exit 1
fi

SOURCE="$1"
OUTPUT="${2:-icon.icns}"

if [[ ! -f "$SOURCE" ]]; then
    echo "Error: Source image not found: $SOURCE"
    exit 1
fi

# Create temporary iconset directory
ICONSET=$(mktemp -d)/icon.iconset
mkdir -p "$ICONSET"

echo "Creating iconset from $SOURCE..."

# Generate all required sizes
# macOS requires these specific sizes for the iconset
sips -z 16 16     "$SOURCE" --out "$ICONSET/icon_16x16.png" > /dev/null
sips -z 32 32     "$SOURCE" --out "$ICONSET/icon_16x16@2x.png" > /dev/null
sips -z 32 32     "$SOURCE" --out "$ICONSET/icon_32x32.png" > /dev/null
sips -z 64 64     "$SOURCE" --out "$ICONSET/icon_32x32@2x.png" > /dev/null
sips -z 128 128   "$SOURCE" --out "$ICONSET/icon_128x128.png" > /dev/null
sips -z 256 256   "$SOURCE" --out "$ICONSET/icon_128x128@2x.png" > /dev/null
sips -z 256 256   "$SOURCE" --out "$ICONSET/icon_256x256.png" > /dev/null
sips -z 512 512   "$SOURCE" --out "$ICONSET/icon_256x256@2x.png" > /dev/null
sips -z 512 512   "$SOURCE" --out "$ICONSET/icon_512x512.png" > /dev/null
sips -z 1024 1024 "$SOURCE" --out "$ICONSET/icon_512x512@2x.png" > /dev/null

echo "Converting to icns..."
iconutil -c icns "$ICONSET" -o "$OUTPUT"

# Cleanup
rm -rf "$(dirname "$ICONSET")"

echo "Created: $OUTPUT"
